<%= form_for(@catalogo) do |f| %>
	<% if @catalogo.errors.any? %>
    	<div id="error_explanation">
      		<h2><%= pluralize(@catalogo.errors.count, "error") %> prohibited this catalogo from being saved:</h2>
      		<ul>
      			<% @catalogo.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
      			<% end %>
      		</ul>
    	</div>
  	<% end %>
	<div class="col-lg-6 col-md-6" id="form-wrapper">
		<div id="tm-form-header">
			<h1><%= @titulo %></h1>
		</div>
		
		<div id="tm-form-content">
			<div class="form-group">
				<%= f.label "Categoria*" %><br>
				<%= f.text_field :ctlg_categoria, class: "form-control", required: :required %>
			</div>
		  	<div class="form-group">
		    	<%= f.label :Subcategoria %><br>
		    	<%= f.text_field :ctlg_subcategoria, class: "form-control" %>
		  	</div>
		  	<div class="form-group">
		    	<%= f.label "Código*" %><br>
		    	<%= f.text_field :ctlg_valorCdg, class: "form-control" %>
		  	</div>
		  	<div class="form-group">
		    	<%= f.label "Descripción*" %><br>
		    	<%= f.text_field :ctlg_valorDesc, class: "form-control" %>
		  	</div>
		  	<div class="form-group">
		    	<%= f.label "Observación" %><br>
		    	<%= f.text_field :ctlg_observacion, class: "form-control" %>
		  	</div>
		  	<div class="form-group">
		    	<%= f.label "Estado*" %><br>
		    	<%= f.collection_select :ctlg_estadoRegistro, @estados, :first, :last, {selected: @catalogo.ctlg_estadoRegistro}, class: "form-control" %>
		  	</div>
		</div>
		<div id="tm-form-footer">
			<div class="actions">
				<script>
					document.addEventListener("turbolinks:load", function() {
						$("#cmd_aceptar").click(function(e){
							<% if params[:action] == "edit" then %>
								$('#<%= params[:action] %>_catalogo_<%= @catalogo.id %>').submit();
							<% elsif params[:action] == "new" or params[:action] == "create"%>
								$('#<%= params[:action] %>_catalogo').submit();
							<% end %>
							e.preventDefault();
						});
					});
				</script>
				
				<%= link_to 'Regresar', catalogos_path , class:"button back" %> |
				<%= link_to 'Aceptar', nil, class:"button save", id:"cmd_aceptar" %>
				<% if params[:action] == "edit" then %>
					| <%= link_to 'Consultar', @catalogo, class:"button find" %>
				<% end %> 
			</div>
		</div>
	</div>
<% end %>

<script>
	$(function(){
		 $( document ).trigger( "page:load" );
	});
</script>