<%= form_for(@vehiculo) do |f| %>
  <% if @vehiculo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehiculo.errors.count, "error") %> prohibited this vehiculo from being saved:</h2>

      <ul>
      <% @vehiculo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
	<div class="col-lg-6 col-md-6" id="form-wrapper">
  		<div id="tm-form-header">
			<h1><%= @titulo %></h1>
		</div>
		<div id="tm-form-content">
		  <div class="form-group">
		    <%= f.label :vehi_tipo, "Tipo*" %><br>
		    <%= f.text_field :vehi_tipo %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_modeloCodigo, "Modelo*" %><br>
		    <%= f.text_field :vehi_modeloCodigo %>
		  </div>
		  <!--div class="form-group">
		    <%#= f.label :vehi_medioCodigo, "Medio" %><br>
		    <%#= f.text_field :vehi_medioCodigo %>
		  </div-->
		  <div class="form-group">
		    <%= f.label :vehi_nombre, "Nombre*" %><br>
		    <%= f.text_field :vehi_nombre %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_matricula, "Matrícula*" %><br>
		    <%= f.text_field :vehi_matricula %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_propietarioId, "Propietario*" %><br>
		    <%= f.number_field :vehi_propietarioId %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_tipoPropietario, "Tipo Propietario*" %><br>
		    <%= f.text_field :vehi_tipoPropietario %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_sucursalEmpresaPropId, "Sucursal Propietaria" %><br>
		    <%= f.text_field :vehi_sucursalEmpresaPropId %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_capacPesoMaximo, "Capacidad Peso Máximo" %><br>
		    <%= f.number_field :vehi_capacPesoMaximo %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_capacPesoPasajeros,"Capacidad Peso Pasajeros" %><br>
		    <%= f.number_field :vehi_capacPesoPasajeros %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_capacCargaBodega, "Capacidad carga en bodega" %><br>
		    <%= f.number_field :vehi_capacCargaBodega %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_capacPasajeros, "Capacidad Pasajeros*" %><br>
		    <%= f.number_field :vehi_capacPasajeros %>
		  </div>
		  <div class="form-group">
		    <%= f.label :vehi_estadoRegistro, "Estado*" %><br>
		    <%= f.text_field :vehi_estadoRegistro %>
		  </div>
  		</div>
		<div id="tm-form-footer">
			<div class="actions">
				<script>
					$(document).on('page:load', function() {
						$("#cmd_aceptar").click(function(e){
							<% if params[:action] == "edit" then %>
								$('#<%= params[:action] %>_vehiculo_<%= @vehiculo.id %>').submit();
							<% elsif params[:action] == "new" or params[:action] == "create"%>
								$('#<%= params[:action] %>_vehiculo').submit();
							<% end %>
							e.preventDefault();
						});
					});
				</script>
				
				<%= link_to 'Regresar', vehiculos_path , class:"button back" %> |
				<%= link_to 'Aceptar', nil, class:"button save", id:"cmd_aceptar" %>
				<% if params[:action] == "edit" then %>
					| <%= link_to 'Consultar', @vehiculo, class:"button find" %>
				<% end %> 
			</div>
		</div>
	</div>
<% end %>
<script>
	$(function(){
		 $( document ).trigger( "page:load" );
	});
</script>