				$("#reserva_apellidos1").val($("#contacto_apellidos").val());
				$("#reserva_numero_identificacion1").val($("#contacto_numero_identificacion").val());
			}
			else{
				$("#reserva_tipo_identificacion1").val("");
				$("#reserva_numero_identificacion1").val("");
				$("#reserva_nombres1").val("");
				$("#reserva_apellidos1").val("");
			}
		});
		
		$("#cmdEnviar").click(function(e){
			e.preventDefault();
			
			$("#contacto_nombres").val($("#contacto_nombres").val().toUpperCase());
			$("#contacto_apellidos").val($("#contacto_apellidos").val().toUpperCase());
			
			$("input[name='reserva[nombres][]']").each(function(){
				$(this).val($(this).val().toUpperCase());	
			});
			
			$("input[name*='reserva[apellidos][]']").each(function(){
				$(this).val($(this).val().toUpperCase());	
			});

			$("#frmConfirmarReserva").submit();
		});
	});
</script>