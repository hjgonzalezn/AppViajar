            $('input[id*="reserva_fechaNacimiento"]').val("");
            
		$("#contacto_pax").click(function(){
			if($('input[id="contacto_pax"]:checked').length > 0){
				$("#reserva_tipo_identificacion1").val($("#contacto_tipo_identificacion option:selected").val());
				$("#reserva_numero_identificacion1").val($("#contacto_numero_identificacion").val());
