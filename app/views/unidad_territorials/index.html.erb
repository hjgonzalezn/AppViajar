<section class="tm-white-bg section-padding-bottom" id="contenido">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-12 col-sm-12">
				<% unless notice.nil? %>
					<br>
					<div class="alert alert-success">
						<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
						<p id="notice"><%= notice %></p>
					</div>
				<% end %>
				<div class="tableWrapper">
					<div class="section-header">
						<h1>Unidades Territoriales</h1>
					</div>
					
					<table id="indexTable" class="stripe hover">
  						<thead>
						    <tr>
						      <th>Nombre</th>
						      <th>Estado</th>
						      <th colspan="3"></th>
						    </tr>
  						</thead>
  						<tbody>
    						<% @unidad_territorials.each do |unidad_territorial| %>
      							<tr>
							        <td><%= unidad_territorial.undter_nombre %></td>
							        <td><%= @estados[unidad_territorial.undter_estadoRegistro] %></td>
					        		<td><%= link_to(unidad_territorial, class:"btn btn-info") do %>
					        				<i class="fa fa-book"></i>
					        			<% end %>
					        		</td>
					        		<td><a href="<%= edit_unidad_territorial_path(unidad_territorial) %>" class="btn btn-warning">
					        				<i class="fa fa-edit"></i>
					        			</a>
					        		</td>
					        		<td>
					        			<a data-confirm="¿Está seguro(a) de eliminar este registro?" class="btn btn-danger" rel="nofollow" data-method="delete" href=<%= "/unidad_territorials/#{unidad_territorial.id}"%> >
					        				<i class="fa fa-trash"></i>
					        			</a>
					        		</td>
      							</tr>
    						<% end %>
  						</tbody>
					</table>
					<div class="section-footer">
						<%= link_to 'Regresar', administracion_path , class:"button back" %>
						<%= link_to 'Nuevo registro', new_unidad_territorial_path, class:"button add" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<script>

	$(document).on('page:load', function() {
			if ( $.fn.dataTable.isDataTable( '#indexTable' ) ) {
			    table = $('#indexTable').DataTable();
			}
			else {
			    table = $('#indexTable').DataTable( {
			        pagingType: "full_numbers"
			    } );
			}
		});
		
	$(function() {
		$('#indexTable').DataTable({
    		"pagingType": "full_numbers",
			"aoColumns" : [
							{ sWidth : "70%" },
							{ sWidth : "30%" }
						]
    		});
	});
</script>