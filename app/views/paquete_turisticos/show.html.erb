<section class="tm-white-bg section-padding-bottom" id="contenido">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-12 col-sm-12">
				<% unless notice.nil? %>
					<div class="row">
						<div class="col-lg-6 col-md-6">
							<br>
							<div class="alert alert-success">
								<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
								<p id="notice"><%= notice %></p>
							</div>
						</div>
					</div>
				<% end %>
				
  				<div class="col-lg-11 col-md-11" id="form-wrapper">
	  				<div id="tm-form-header">
						<h1>Consultar Paquete Turístico</h1>
					</div>
					<div id="tm-form-content">
						<div class="tm-home-box-h">
							<ul class="nav nav-tabs tm-white-bg" role="tablist" id="generalTabs">
							    <li role="presentation" class="active">
									<a href="#datos" aria-controls="datos" role="tab" data-toggle="tab">Datos Básicos</a>
							    </li>
							    <li role="presentation">
							    	<a href="#actividades" aria-controls="hotel" role="tab" data-toggle="tab">Actividades</a>
							    </li>
							    <li role="presentation">
							    	<a href="#itinerario" aria-controls="hotel" role="tab" data-toggle="tab">Itinerario</a>
							    </li>
							    <li role="presentation">
							    	<a href="#fechas" aria-controls="hotel" role="tab" data-toggle="tab">Agenda</a>
							    </li>
							</ul>
							<div class="tab-content tm-white-bg">
								<div role="tabpanel" class="tab-pane fade in active tm-white-bg" id="datos">
									<div class="tm-search-box">
										<p>&nbsp;</p>
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Nombre:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<p><%= @paquete_turistico.pqTur_nombre %></p>
											</div>
										</div>
										<br>
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Descripcion:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<p><%= @paquete_turistico.pqTur_descripcion %></p>
											</div>
										</div>
										<br>
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Incluye</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<% arrItems = @paquete_turistico.pqTur_incluye.split(13.chr) %>
												<ul>
													<% arrItems.each do |i| %>
														<li><%= i %></li>
													<% end %>
												</ul>
											</div>
										</div>
										<br>	
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>No Incluye</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<% arrItems = @paquete_turistico.pqTur_noIncluye.split(13.chr) %>
												<ul>
													<% arrItems.each do |i| %>
														<li><%= i %></li>
													<% end %>
												</ul>
											</div>
										</div>
										<br>	
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Actividades opcionales:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<% arrItems = @paquete_turistico.pqTur_opcionales.split(13.chr) %>
												<ul>
													<% arrItems.each do |i| %>
														<li><%= i %></li>
													<% end %>
												</ul>
											</div>
										</div>
										<br>	
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Recomendaciones:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<% arrItems = @paquete_turistico.pqTur_recomendaciones.split(13.chr) %>
												<ul>
													<% arrItems.each do |i| %>
														<li><%= i %></li>
													<% end %>
												</ul>
											</div>
										</div>
										<br>	
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Fecha inicial de vigencia:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<p><%= @paquete_turistico.pqTur_fechaVigenciaIni %></p>
											</div>
										</div>
										<br>	
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Fecha final de vigencia:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<p><%= @paquete_turistico.pqTur_fechaVigenciaFin %></p>
											</div>
										</div>
										<br>	
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Fecha inicial de promoción:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<p><%= @paquete_turistico.pqTur_fechaPromocionIni %></p>
											</div>
										</div>
										<br>	
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Fecha final de promoción:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<p><%= @paquete_turistico.pqTur_fechaPromocionFin %></p>
											</div>
										</div>
										<br>	
										<div class="col-lg-12 col-md-12 col-sm-12">
											<div class="col-lg-6 col-md-6">
												<p><strong>Estado registro:</strong></p>
											</div>
											<div class="col-lg-6 col-md-6">
												<p><%= @estados[@paquete_turistico.pqTur_estadoRegistro] %></p>
											</div>
										</div>
										<p>&nbsp;</p>
									</div>
								</div>
								<div role="tabpanel" class="tab-pane fade in tm-white-bg" id="actividades">
									<div class="tm-search-box">
									</div>
								</div>
								<div role="tabpanel" class="tab-pane fade in tm-white-bg" id="itinerario">
									<div class="tm-search-box">
									</div>
								</div>
								<div role="tabpanel" class="tab-pane fade in tm-white-bg" id="fechas">
									<div class="tm-search-box">
									</div>
								</div>
							</div>
						</div>
					</div>
					<div id="tm-form-footer">
						<%= link_to 'Regresar', paquete_turisticos_path, class:"button back" %> |
						<%= link_to 'Modificar', edit_paquete_turistico_path(@paquete_turistico), class:"button edit" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
