<section class="tm-white-bg section-padding-bottom" id="contenido">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-12 col-sm-12">
				<% unless notice.nil? %>
					<div class="row">
						<div class="col-lg-6 col-md-6">
							<br>
							<div class="alert alert-success">
								<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
								<p id="notice"><%= notice %></p>
							</div>
						</div>
					</div>
				<% end %>
				
  				<div class="col-lg-9 col-md-9" id="form-wrapper">
	  				<div id="tm-form-header">
						<h1>Consultar Actividad Turística</h1>
					</div>
					<div id="tm-form-content">
						<div class="col-lg-12 col-md-12">
							<div class="col-lg-3 col-md-3">
  								<strong>Descripción:</strong>
  							</div>
  							<div class="col-lg-9 col-md-9">
  								<%= @actividad_turistica.actur_descripcion %>
							</div>
						</div>
						<div class="col-lg-12 col-md-12">
							<div class="col-lg-3 col-md-3">
	  							<strong>Tipo de Actividad:</strong>
	  						</div>
	  						<div class="col-lg-9 col-md-9">
  								<%= @actividad_turistica.tipo_actividad_turistica.tiAcT_nombre %>
  							</div>
						</div>
						<div class="col-lg-12 col-md-12">
							<div class="col-lg-3 col-md-3">
  								<strong>Tarifa:</strong>
  							</div>
  							<div class="col-lg-9 col-md-9">
  								<%= number_to_currency(@tarifa.trf_base) %>
  							</div>
  						</div>
						<div class="col-lg-12 col-md-12">
							<div class="col-lg-3 col-md-3">
  								<strong>Estado:</strong>
  							</div>
  							<div class="col-lg-9 col-md-9">
  								<%= @estados[@actividad_turistica.actur_estadoRegistro] %>
  							</div>
  						</div>
  						<p>&nbsp;</p>
					</div>
					<div id="tm-form-footer">
						<%= link_to 'Regresar', actividad_turisticas_path, class:"button back" %> |
						<%= link_to 'Modificar', edit_actividad_turistica_path(@actividad_turistica), class:"button edit" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>