<section class="tm-white-bg section-padding-bottom" id="contenido">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-12 col-sm-12">
				<% unless notice.nil? %>
					<br>
					<div class="alert alert-success">
						<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
						<p id="notice"><%= notice %></p>
					</div>
				<% end %>
				<div class="tableWrapper">
					<div class="section-header">
						<h1>Tipos de Actividad Turística</h1>
					</div>
					<table id="indexTable" class="stripe hover">
						<thead>
					    	<tr>
					      		<th>Nombre</th>
					      		<th>Descripcion</th>
					      		<th>Foto</th>
					      		<th>Icono</th>
					      		<th colspan="3"></th>
					    	</tr>
					  	</thead>
					  	<tbody>
					    	<% @tipo_actividad_turisticas.each do |tipo_actividad_turistica| %>
					      		<tr>
					        		<td><%= tipo_actividad_turistica.tiAcT_nombre %></td>
					        		<td><%= tipo_actividad_turistica.tiAcT_descripcion %></td>
					        		<td><%= tipo_actividad_turistica.tiAcT_foto %></td>
					        		<td><%= tipo_actividad_turistica.tiAcT_icono %></td>
					        		<td><%= link_to(tipo_actividad_turistica, class:"btn btn-info") do %>
					        				<i class="fa fa-book"></i>
					        			<% end %>
					        		</td>
					        		<td><a href="<%= edit_tipo_actividad_turistica_path(tipo_actividad_turistica) %>" class="btn btn-warning">
					        				<i class="fa fa-edit"></i>
					        			</a>
					        		</td>
					        		<td>
					        			<a data-confirm="¿Está seguro(a) de eliminar este registro?" class="btn btn-danger" rel="nofollow" data-method="delete" href=<%= "/tipo_actividad_turisticas/#{tipo_actividad_turistica.id}"%> >
					        				<i class="fa fa-trash"></i>
					        			</a>
					        		</td>
      							</tr>
    						<% end %>
  						</tbody>
					</table>
					<div class="section-footer">
						<%= link_to 'Regresar', administracion_path , class:"button back" %>
						<%= link_to 'Nuevo registro', new_tipo_actividad_turistica_path, class:"button add" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<script>

	$(document).on('page:load', function() {
			if ( $.fn.dataTable.isDataTable( '#indexTable' ) ) {
			    table = $('#indexTable').DataTable();
			}
			else {
			    table = $('#indexTable').DataTable( {
			        pagingType: "full_numbers"
			    } );
			}
		});
		
	$(function() {
		$('#indexTable').DataTable({
    		"pagingType": "full_numbers",
			"aoColumns" : [
							{ sWidth : "30%" },
							{ sWidth : "50%" },
							{ sWidth : "10%" },
							{ sWidth : "10%" }
						]
    		});
	});
</script>
